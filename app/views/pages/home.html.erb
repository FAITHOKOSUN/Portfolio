      color: #2f4f4f; /* Dark Grey */
    }

    .btn-dark {
      background-color: #2f4f4f; /* Dark Grey */
      color: #adff2f; /* Yellow-Green */
    }

    .btn-dark:hover {
      background-color: #556b2f; /* Dark Olive Green on hover */
      color: #adff2f; /* Yellow-Green on hover */
    }
     .animated-text {
      animation: fadeInAnimation 2s ease-in-out;
    }

    @keyframes fadeInAnimation {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
     .lead {
      color: #fff; /* White */
      cursor: pointer;
      display: inline-block;
      padding: 10px 20px;
      background-color: #556b2f; /* Dark Olive Green */
      border-radius: 5px;
      margin-top: 30px;
      transition: background-color 0.3s;
      text-decoration: none; /* Remove underline from the link */
    }
  .lead:hover {
      background-color: #8fbc8f; /* Dark Sea Green on hover */
    }
    ul.list-unstyled {
  padding: 0;
}

li.mb-4 {
