  align-items: center;
  color: #fff;
  border: 3px solid #556b2f; /* Add a white border around each skill box */
  border-radius: 10px; /* Add rounded corners to the skill boxes */
  max-width: 200px;
  margin: 0 auto; 
  padding: 5px; /* Add padding inside each skill box */
}

li.mb-4 img {
